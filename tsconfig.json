{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true /* Generates corresponding '.d.ts' file. */,
    "outDir": "dist", /* Redirect output structure to the directory. */
    "baseUrl": "./",
    "rootDir": "./",
    "composite": true,
    "noEmitOnError": false,
  },
  "exclude": ["dist"]
}